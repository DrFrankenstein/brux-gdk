#===========================#
#							#
#	 XYG STUDIO MAKEFILE	#
#							#
#	Check the build folder	#
#	for output files.		#
#							#
#===========================#

CC=gcc
CF=-I.
DP = binds.h fileio.h global.h graphics.h input.h main.h maths.h sprite.h shapes.h structs.h
OB = binds.o fileio.o global.o graphics.o input.o main.o maths.o sprite.o structs.o xyDot.o xyShape.o
SR = binds.cpp fileio.cpp global.cpp graphics.cpp input.cpp main.cpp maths.cpp sprite.cpp structs.cpp xyDot.cpp xyShape.cpp

%.o: %.cpp $(DP)
	$(CC) -c -o $@ $< $(CF)

win: $(OB)
	gcc -o xyg.exe $^ $(CF)

.PHONY: clean